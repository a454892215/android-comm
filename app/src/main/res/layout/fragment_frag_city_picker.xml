<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical">

    <com.common.widget.wheel.CityPickerView
        android:id="@+id/city_picker"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center"
        android:text="确定"
        android:background="#DFDFDF"
        android:foreground="?selectableItemBackground"
        android:textSize="@dimen/sp_15"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="弹窗城市选择器"
        android:background="#DFDFDF"
        android:foreground="?selectableItemBackground"
        android:textSize="@dimen/sp_15"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <com.common.widget.CommonTextView
        android:id="@+id/tv"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_30"
        android:text="我是CommonTextView"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:background="#cccccc"
        app:clip_radius="@dimen/dp_5"
        app:bottom_line_color="#F44336"
        app:bottom_line_height="@dimen/dp_3"
        app:right_line_color="#E91E63"
        app:right_line_stroke_width="@dimen/dp_3"
        app:top_line_color="#9C27B0"
        app:top_line_height="@dimen/dp_3"
        app:left_line_color="#673AB7"
        app:left_line_stroke_width="@dimen/dp_3"
        tools:ignore="HardcodedText" />

    <com.common.widget.CommonTextView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:text="23"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:textColor="#ffffff"
        android:foreground="@drawable/shape_round_bg_color"
        android:background="#8BCBFD"
        app:clip_radius="@dimen/dp_5"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <com.common.widget.CommonTextView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:text="23"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/layer_bg_gradient_border"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <com.common.widget.SwitchButton
        android:id="@+id/switch_button_1"
        android:layout_width="48dp"
        android:layout_height="@dimen/dp_25"
        app:sb_background="#5892ed"
        app:sb_button_color="@color/white"
        app:sb_checked_color="#5892ed"
        app:sb_shadow_radius="0dp"
        app:sb_show_indicator="false"
        app:sb_uncheck_color="#5892ed" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="center"
        android:background="@drawable/selector_switch_bg"
        android:layout_marginTop="10dp"
        android:thumb="@drawable/layer_swich_thumb"
        app:track="@drawable/layer_swich_track"
        app:switchMinWidth="44dp"/>

</LinearLayout>